package baekjoon;

import java.util.Scanner;

public class dp_1463 {
	static int n;
	static int count;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner(System.in);
		
		n = in.nextInt();
		count = 0;
		calculator();
		System.out.println(count);
	}
	public static void calculator(){
		while(n%3==0){
			n=n/3;
			count++;
		}
		if((n-1)%3==0){
			n=n-1;
			count++;
			calculator();
		}
		while(n%2==0){
			n=n/2;
			count++;
		}
	}

}
