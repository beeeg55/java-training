			            if(i==j){
			              strike+=1;
			            }else{  
			              ball+=1;
			            }
			          
			        }
			      }
				
				
			       
			      //만약 strike, ball 아무도 못맞췄다면
			      if(strike == 0 && ball==0){
			        System.out.println("\n아웃!!\n");
			      }else if(strike == 3){ //만약 스트라이크 3개라면
			        System.out.print("\n스트라이크!!");
