package baekjoon;

import java.util.Arrays;
import java.util.Scanner;

public class greedy_2217 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner(System.in);
		
		int l = in.nextInt();
		int arr[] = new int[l];
		for(int i=0;i<l;i++){
			arr[i]= in.nextInt();
		}
		Arrays.sort(arr);

		int max = arr[l-1];
		for(int i=0;i<l;i++){
			Arrays.sort(arr, i, l);
			if(arr[i]*(l-i)>max){
				max=arr[i]*2;
			}
		}
		System.out.println(max);
	}

}
