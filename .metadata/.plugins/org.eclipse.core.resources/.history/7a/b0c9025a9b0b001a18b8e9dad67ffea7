package baekjoon;

import java.util.Scanner;

public class blackjack {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		int N = input.nextInt();
		int M = input.nextInt();
		int sum;
		int diff;
		int result = 0;
		
		int arr[] = new int[N];
		
		for(int i=0; i<N; i++){
			arr[i]= input.nextInt();
		}
		
		for(int i=0;i<N;i++){
			for(int j=0;j<N;j++){
				for(int k=0;k<N;k++){
					sum = i+j+k;
					diff = sum - M;
					if(diff>0 && sum> result){
						sum = result;
					}
				}
			}
		}
		System.out.println(sum);
		
	}

}
